<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefHeight="700.0" prefWidth="550.0" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #e8e8e8;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.metrostate.ics.ordertrackingappkotlin.ui.OrderDetailsController">
    <Label fx:id="titleLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Order Details">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <ScrollPane fitToWidth="true" style="-fx-background: white; -fx-background-color: white; -fx-border-color: #c0c0c0; -fx-border-width: 1.5; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 5, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <VBox fx:id="orderDetailsContainer" spacing="20.0" style="-fx-background-color: white; -fx-padding: 25;">
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_LEFT" prefHeight="111.0" prefWidth="510.0" spacing="10">
        <Button onAction="#close" style="-fx-background-color: #e8e8e8; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 36; -fx-padding: 2 8 2 8; -fx-background-radius: 6; -fx-cursor: hand; -fx-border-color: #b0b0b0; -fx-border-width: 1.5; -fx-border-radius: 6;" text="â†©">
            <HBox.margin>
                <Insets top="5.0" />
            </HBox.margin>
        </Button>
      <HBox alignment="CENTER" prefHeight="111.0" prefWidth="110.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                    <Button fx:id="completeButton" alignment="CENTER" onAction="#handleComplete" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 8 12 8 12; -fx-background-radius: 6; -fx-cursor: hand;" text="Complete order" />
                  <Region prefHeight="31.0" prefWidth="100.0" />
                    <Button fx:id="startButton" alignment="CENTER" onAction="#handleStart" prefHeight="34.0" prefWidth="108.0" style="-fx-background-color: #1565c0; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 8 12 8 12; -fx-background-radius: 6; -fx-cursor: hand;" text="Start order" />
               </children>
            </VBox>
         </children>
      </HBox>
        <Region prefHeight="111.0" prefWidth="58.0" HBox.hgrow="ALWAYS" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="111.0" prefWidth="208.0">
               <children>
                  <Button fx:id="adjustTipButton" onAction="#handleAdjustTip" prefWidth="102.0" style="-fx-background-color: #fb8c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11; -fx-padding: 4 10 4 10; -fx-background-radius: 6; -fx-cursor: hand;" text="Adjust Tip" />
                  <Region prefHeight="31.0" prefWidth="100.0" />
                    <Button fx:id="resubmitButton" onAction="#handleResubmit" prefWidth="102.0" style="-fx-background-color: #fb8c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11; -fx-padding: 4 10 4 10; -fx-background-radius: 6; -fx-cursor: hand;" text="Resubmit order" />
                  <Region prefHeight="31.0" prefWidth="100.0" />
                    <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11; -fx-padding: 4 10 4 10; -fx-background-radius: 6; -fx-cursor: hand;" text="Cancel order" />
               </children>
            </VBox>
         </children>
      </HBox>
    </HBox>
</VBox>
