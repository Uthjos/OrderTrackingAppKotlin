<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="500.0" minHeight="400.0" minWidth="500.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.metrostate.ics.ordertrackingappkotlin.MainViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header with title and exit button -->
    <HBox prefHeight="27.0" prefWidth="292.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" />
        </padding>

        <Label text="View Orders">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

    </HBox>
    <HBox fx:id="filterContainer" alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Status:" />
        <ComboBox fx:id="statusFilter" prefWidth="120.0" />

        <Label text="Type:" />
        <ComboBox fx:id="typeFilter" prefWidth="120.0" />
    </HBox>
    <Label text="Click order to view details" />
    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <!-- scrollable area for orders -->
        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                <VBox fx:id="ordersContainer" spacing="15.0" style="-fx-background-color: white;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>

                    <VBox fx:id="orderBox" onMouseClicked="#openOrderDetails" spacing="6.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-cursor: hand;">
                        <Label fx:id="orderBoxIdLabel" />
                        <HBox spacing="8.0">
                            <Label fx:id="orderBoxStatusLabel" />
                        </HBox>
                    </VBox>

                </VBox>
            </ScrollPane>
        </VBox>
    </HBox>
</VBox>
